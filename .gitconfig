[diff]
	tool = vimdiff

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	lg = log --decorate --oneline
	rl = log -g --format=short

[http]
	postBuffer = 524288000

[core]
	quotepath = false
	editor = /usr/bin/vim
	longpaths = true
[push]
	default = simple
[log]
	decorate = true
[sendemail]
	suppresscc = all
	signedoffbycc = false
	suppressfrom = true
